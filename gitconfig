
[alias]
	ci = commit
	co = checkout
	st = status
	br = branch
	dlog = log --decorate
	plog = log --pretty=format:\"%h %Cblue%cr%Creset %cn %Cgreen%s%Creset %d\"

[push]
	default = tracking
[color]
	ui = auto
[color "branch"]
	current = blue reverse
	local = blue
	remote = green
[color "diff"]
	meta = blue bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[help]
	autocorrect = 50

[merge]
	keepBackup = false;
	tool = p4merge
	renameLimit = 5000
