PATH=/opt/local/sbin:$PATH
PATH=/usr/local/sbin:$PATH
PATH=/opt/local/bin:$PATH
PATH=/usr/local/bin:$PATH
PATH=~/bin:$PATH
export PATH

export MANPATH=/opt/local/man:$MANPATH

export COLORTERM=1 
export EDITOR='mvim -v'
export GREP_OPTIONS="--color=auto"
export LESS="-rf"
export PAGER="less $LESS"

export RUBYROOT=/opt/local/lib/ruby

if [[ -f ~/.local-profile ]]; then
  . ~/.local-profile
fi

. ~/.config/bash/rails.sh

# Automatic bash completion for MacPorts
if [ -f /opt/local/etc/bash_completion ]; then
	. /opt/local/etc/bash_completion
else
	. ~/.config/bash/git-completion.bash
fi

complete -o bashdefault -o default -o nospace -F _git g

export GIT_PS1_SHOWDIRTYSTATE=true
#export GIT_PS1_DESCRIBE_STYLE=branch
#export GIT_PS1_SHOWUNTRACKEDFILES=true

#export PS1='\[\033]0;\w $(__git_ps1 "(%s) ")\007\]\h \w $(__git_ps1 "(%s) ")$(git_dirty_flag)➔  '
#export PS1='\[\033]0;\w $(__git_ps1 "(%s) ")\007\]\h \w $(__git_ps1 "(%s) ")➔  '
#export PS1='\[\033]0;\w $(export GITPROMPT=`__git_ps1 "(%s) "`; echo $GITPROMPT)\007\]\h \w ${GITPROMPT}➔  '
#export PS1='$(gitprompt=`__git_ps1 "(%s) "`; echo "\[\033]0;\w $gitprompt\007\]\h \w ${gitprompt}➔  ")'
export PS1='$(gitprompt=`__git_ps1 " (%s)"`; echo "\[\e]0;\w $gitprompt\007\]\n\[\e[034;1;7m\]\h \w \[\e[0m\] \t${gitprompt} $(rvm-prompt u)\n➔ ")'

alias g='git'
alias gf="git fetch"
alias gpl="git pull"
alias gps="git push"
alias gm="git merge"

alias epoch='date -j -f "%a %b %d %T %Z %Y" "`date`" "+%s"'

alias ls="ls -CFG"
alias gvim="mvim --remote-tab-silent"
alias kicksilver="killall Quicksilver && open -a Quicksilver"
alias bouncewifi="sudo ifconfig en1 down && sudo ifconfig en1 up"

alias rslv="git status | grep unmerged | field 3 | xargs mvim -p"

function shave_and_a_haircut() {
	echo -n 
	sleep 0.3
	echo -n 
	sleep 0.3
	echo -n 
	sleep 0.3
	echo -n 
	sleep 0.6
	echo -n 
	sleep 0.3
	echo -n 
}
	
